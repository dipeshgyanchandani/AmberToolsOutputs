source leaprc.DNA.bsc1  # Load the DNA force field

# Define the single strand (strand1)
strand1 = sequence { DA5 DG DG DG DT DT DA DG DG DG DT DT DA DG DG DG DT DT DA DG DG DG DT DT DA3 }

# Optional: Solvate the single strand with a water box (to stabilize the structure)
# solvateBox strand1 TIP3PBOX 10.0

# Save the single strand structure as a PDB file
savepdb strand1 agggtt_single_strand.pdb
saveamberparm strand1 agggtt_single_strand.prmtop agggtt_single_strand.inpcrd

quit  # Exit tleap

