source leaprc.DNA.bsc1  # Load the DNA force field

# Define the first strand (strand1)
strand1 = sequence { DA5 DG DG DG DT DT DA DG DG DG DT DT DA DG DG DG DT DT DA DG DG DG DT DT DA3 }

# Define the complementary strand (strand2)
strand2 = sequence { DT5 DC DC DC DA DA DT DC DC DC DA DA DT DC DC DC DA DA DT DC DC DC DA DA DT3 }

# Combine the two strands into a double-stranded DNA
dna = combine { strand1 strand2 }

# Define the solvent model
solvent = loadamberparams frcmod.tip3p

# Solvate the DNA molecule with a water box
solvateBox dna TIP3PBOX 10.0

# Save the structure as a PDB file
savepdb dna agggtt_dna_double_helix.pdb
saveamberparm dna agggtt_dna_double_helix.prmtop agggtt_dna_double_helix.inpcrd

quit  # Exit tleap
